<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E003E">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk Watch"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:drawablePadding="8dp" />

        <!-- Subheader Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/safeZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Zones"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/incidentReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incident Report"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/crimeRisk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crime Risk: High"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <!-- Panic Button -->
    <Button
        android:id="@+id/panicButton"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:text="Panic Button"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/pbutton_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
